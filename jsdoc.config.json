{
    "source": {
        "include": ["src/"],
        "includePattern": ".+\\.jsx?$",
        "excludePattern": "(node_modules|stories)"
    },
    "opts": {
        "destination": "docs/",
        "recurse": true,
        "readme": "README.md"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false
    }
}
